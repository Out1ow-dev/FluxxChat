<Window x:Class="FluxxChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:FluxxChat.Model"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:FluxxChat.ViewModel.Main"
        xmlns:local="clr-namespace:FluxxChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1050" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" MaxHeight="650" MaxWidth="1050">
    <Window.DataContext>
        <vm:StartPageViewModel/>
    </Window.DataContext>

    <Grid Background="#FF27292F">
        <Frame
                Grid.Row="0"
                Content="{Binding CurrentPage}"
                NavigationUIVisibility="Hidden" />

        <StackPanel Margin="0,0,0,614" >
            <ui:TitleBar Title="Fluxx Chat" Height="36"/>
        </StackPanel>
    </Grid>
    
</Window>
